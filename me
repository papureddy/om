# carbon_footprint_calculator.py

def calculate_emissions():
    print("üåç Carbon Footprint Calculator üåø")
    print("----------------------------------")

    # Get user inputs
    electricity_kwh = float(input("1Ô∏è‚É£ Enter monthly electricity usage (in kWh): "))
    car_km = float(input("2Ô∏è‚É£ Enter weekly car travel (in km): "))
    flights = int(input("3Ô∏è‚É£ Enter number of short-haul flights per year: "))
    meat_meals = int(input("4Ô∏è‚É£ Enter number of meat-based meals per week: "))
    waste_kg = float(input("5Ô∏è‚É£ Enter weekly household waste (in kg): "))

    print("\nüìä Calculating your annual carbon footprint...\n")

    # Emission factors (average values)
    EMISSIONS = {
        "electricity": 0.45,      # kg CO2 per kWh
        "car": 0.21,              # kg CO2 per km
        "flight": 250,            # kg CO2 per short flight
        "meat_meal": 2.5,         # kg CO2 per meal
        "waste": 0.75             # kg CO2 per kg
    }

    # Annual calculations
    electricity_emissions = electricity_kwh * 12 * EMISSIONS["electricity"]
    car_emissions = car_km * 52 * EMISSIONS["car"]
    flight_emissions = flights * EMISSIONS["flight"]
    meat_emissions = meat_meals * 52 * EMISSIONS["meat_meal"]
    waste_emissions = waste_kg * 52 * EMISSIONS["waste"]

    total_emissions = (
        electricity_emissions +
        car_emissions +
        flight_emissions +
        meat_emissions +
        waste_emissions
    )

    # Output results
    print(f"üîå Electricity Emissions: {electricity_emissions:.2f} kg CO‚ÇÇ/year")
    print(f"üöó Car Emissions: {car_emissions:.2f} kg CO‚ÇÇ/year")
    print(f"‚úàÔ∏è Flight Emissions: {flight_emissions:.2f} kg CO‚ÇÇ/year")
    print(f"üçñ Diet Emissions: {meat_emissions:.2f} kg CO‚ÇÇ/year")
    print(f"üóëÔ∏è Waste Emissions: {waste_emissions:.2f} kg CO‚ÇÇ/year")

    print("\nüåü Your estimated **annual carbon footprint** is:")
    print(f"‚û°Ô∏è {total_emissions:.2f} kg CO‚ÇÇ/year")

    # Comparison
    global_avg = 4000  # Global average in kg/year (example)
    if total_emissions > global_avg:
        print("‚ö†Ô∏è Your footprint is above the global average. Try reducing energy, travel, or meat!")
    else:
        print("‚úÖ Great! You're below the global average carbon footprint.")

# Run the calculator
if __name__ == "__main__":
    calculate_emissions()

